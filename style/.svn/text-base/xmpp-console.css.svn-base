html {
    height: 100%;
}

body {
    font-family: Helvetica;
    margin: 0;
    padding: 0;
    border: none;
    background: #F2F2F2;
    height: 100%;
}

a {
    border: none;
    text-decoration: none;
    color: #D9D9D9;
}

a:hover {
    color: #FFFFFF;
}

#xmpp-console {
    margin: 0;
    padding: 0;
}

#xmpp-console .header {
  margin: 0 0 5px 0;
  padding: 5px;
  background: #1C3D93;
  color: #FFFFFF;
}

#xmpp-console .header h2 {
    display: inline-block;
    margin: 0 20px 0 0;
    font-size: 25px;
    text-align: center;
}

#xmpp-console .header .controls {
    position: absolute;
    top: 10px;
    right: 0;
}

#xmpp-console .header .controls a {
    margin: 0 10px 0 0;
}

#xmpp-console .content {
}

#xmpp-console .column-left {
    float: left;
    margin: 0 5px 0 0;
}

#xmpp-console .column-right {
    float: right;
    margin: 0 0 0 5px;
}

#xmpp-console .middle {
    overflow: hidden;
    height: 100%;
}

#console-results {
    float: left;
    margin: 0;
    padding: 0;
    width: 50%;
    height: 450px;
    color: #eee;
    font-family: monospace;
    overflow: auto;
}

#console-results div {
  padding: 2px;
}

#console-input {
    float: right;
    width: 50%;
    height: 400px;
}

#console-input .content {
    margin: 0 0 0 5px;
}

#console-inputarea {
    width: 100%;
    margin: 0;
    padding: 0;
    height: 400px;
    font-family: monospace;
    border: none;
    background: #F9F9F9;
}

#console-inputarea:hover {
    background-color: #FBFBFB;
}

#console-inputarea.disabled {
    background-color: #EEEEEE;
}

.incoming, .outgoing {
    margin: 0 0 2px 0;
    -moz-border-radius: 10px;
}

.incoming {
    background-color: #CCCCCC;
}

.outgoing {
    background-color: #3D3D3D;
}

.incoming.new {
    background-color: #E5CED7;
}

.outgoing.new {
    background-color: #6A1537;
}

#buttonbar {
    margin: 10px;
}

#console-disconnect {
    float: left;
    width: 100px;
}

#console-send {
    float: right;
    width: 100px;
}

/* xml styles */
.xml_punc { color: #888888; }
.outgoing .xml_tag { color: #FF46E3; }
.incoming .xml_tag { color: #C009A4; }
.outgoing .xml_aname { color: #9EB9F4; }
.incoming .xml_aname { color: #26478E; }
.outgoing .xml_avalue { color: #DEDEFF; }
.incoming .xml_avalue { color: #4D657F; }
.xml_text { word-wrap: break-word; }
.outgoing .xml_text { color: #CCCCCC; }
.incoming .xml_text { color: #666666; }
.xml_level0 { margin-left: 0; }
.xml_level1 { margin-left: 1em; }
.xml_level2 { margin-left: 2em; }
.xml_level3 { margin-left: 3em; }
.xml_level4 { margin-left: 4em; }
.xml_level5 { margin-left: 5em; }
.xml_level6 { margin-left: 6em; }
.xml_level7 { margin-left: 7em; }
.xml_level8 { margin-left: 8em; }
.xml_level9 { margin-left: 9em; }

/* panels */

#xmpp-console .ui-widget-header {
    background: #1C3D93;
    border: 1px solid #1C3D93;
}

#xmpp-console .ui-panel-clps-pnl {
    display: none;
}

#xmpp-console .ui-panel-content {
    padding: 5px;
    font-size: 85%;
}

#xmpp-console .ui-panel-content-text {
    padding: 0;
}

#xmpp-console .ui-panel-content ul {
    list-style: none outside none;
    margin: 0;
    padding: 0;
}

#xmpp-console .ui-panel-content ul li {
    font-weight: bold;
    word-wrap: break-word;
}

#xmpp-console .ui-panel-content ul li span {
    font-weight: normal;
}

#xmpp-console .ui-corner-top {
    -moz-border-radius: 0; 
}

#xmpp-console .ui-widget-content {
    border: none;
}

#xmpp-console .session-infos {
    display: none;
}
